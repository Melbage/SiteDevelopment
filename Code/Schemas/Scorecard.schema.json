{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://melbagesite.github.io/Code/JSON/Schemas/PlayersScoreCard#",
	"description": "Details for scorecard version 2 using all the hole in arrays in the score card ",
	"type": "object",
	"Properties": {
		"FileName": {
			"type": "string"
		},
		"Player": {
			"PlayerName": {
				"type": "string"
			},
			"PlayerUUID": {
				"type": "string",
				"pattern": "^([0-9A-Fa-f]{8}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{12})$"
			},
			"BeforeHandicap": {
				"type": "number"
			},
			"AfterHandicap": {
				"type": "number"
			}
		},
		"CourseDetails": {
			"CourseName": {
				"type": "string"
			},
			"CourseUUID": {
				"type": "string",
				"pattern": "^([0-9A-Fa-f]{8}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{12})$"
			},
			"NumberOfFairways": {
				"type": "number"
			},
			"ParSS": {
				"type": "string"
			}
		},
		"Event": {
			"EventUUID": {
				"type": "string",
				"pattern": "^([0-9A-Fa-f]{8}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{12})$"
			},
			"DatePlayed": {
				"type": "string",
				"format": "date"
			},
			"OrderOfDay": {
				"type": "number"
			},
			"MajorEventName": {
				"type": "string"
			},
			"EventStanding": {
				"type": "number"
			},
			"PrizeFund": {
				"type": "number"
			}
		}
	},
	"ScoreCard": {
		"description": "These are attruibes for a hole, there are 18 of them required for a score card and the total for the values is held in element zero of the array",
		"Par": {
			"description": "Par for holes of the course at the time of playing",
			"type": "array",
			"items": {
				"type": "number",
				"multipleOf": 1,
				"Minimum": 1,
				"maximum": 6
			}
		},
		"StokeIndex": {
			"description": "StokeIndex for holes of the course at the time of playing, zero of array should equal value 171",
			"type": "array",
			"items": {
				"type": "number",
				"exclusiveMinimum": 1,
				"maximum": 18
			}
		},
		"GrossScore": {
			"description": "The number of stokes taken to play each hole, array element zero hold to total points",
			"type": "array",
			"items": {
				"type": "number",
				"multipleOf": 1,
				"Minimum": 1,
				"maximum": 10
			}
		},
		"Points": {
			"description": "stableford points scored on each hole, array element zero hold to total points ",
			"type": "array",
			"items": {
				"type": "number",
				"multipleOf": 1,
				"Minimum": 0,
				"maximum": 6
			}
		},
		"Putts": {
			"description": "Number of putts taken for each hole",
			"type": "array",
			"items": {
				"type": "number",
				"multipleOf": 1,
				"Minimum": 0,
				"maximum": 6
			}
		},
		"FairwayHit": {
			"description": "Record of if the fairway was hit from the tee, par 3 do't have fairways",
			"type": "array",
			"items": {
				"type": "boolean"
			}
		},
		"Ferrets": {
			"description": "element zero is the total number of lost balls for the round, any number is ",
			"type": "array",
			"items": {
				"type": "number",
				"multipleOf": 1,
				"Minimum": 0,
				"maximum": 6
			}
		},
		"GreensInRegulation": {
			"description": "Records if the number of stoken taken to get to the green was with the suggest number for the par of the hole",
			"type": "array",
			"items": {
				"type": "array",
				"items": {
					"type": "boolean"
				}
			}
		}
	},
	"ScoreCardStats": {
		"type": "object",
		"properties": {
			"HoleInOne": {
				"type": "number",
				"multipleOf": 1
			},
			"Condor": {
				"type": "number",
				"multipleOf": 1
			},
			"Albatross": {
				"type": "number",
				"multipleOf": 1
			},
			"Eagle": {
				"type": "number",
				"multipleOf": 1
			},
			"Birdie": {
				"type": "number",
				"multipleOf": 1
			},
			"Par": {
				"type": "number",
				"multipleOf": 1
			},
			"Bogey": {
				"type": "number",
				"multipleOf": 1
			},
			"DoubleBogey": {
				"type": "number",
				"multipleOf": 1
			},
			"DoubleBogey+": {
				"type": "number",
				"multipleOf": 1
			}
		}
	}
}